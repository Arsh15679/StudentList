@model CRUD_BO_MVC.Transaction.StudentBO

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Create Student</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="name">Name</label>
            <input asp-for="name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="college">College</label>
            <input asp-for="college" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Student" asp-action="StudentList" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>